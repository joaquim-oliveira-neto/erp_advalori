<div class="container">
  <div>
    <h2>Upload de documento</h2>
    <%= link_to "XML" %>
    <%= link_to "IMG" %>
    <%= link_to "PDF" %>
  </div>
  <div>
    <h2>Dados do t√≠tulo</h2>
      <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <%= simple_form_for(@invoice, url: invoices_path) do |f| %>
            <%= f.association :payer %>
            <%#= @invoice.seller %>
